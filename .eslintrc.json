{
  "env": {
    "browser": true,
    "node": true,
    "mocha": false
  },
  "extends": "airbnb-base",
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "test/**.js",
          "webpack.config",
          "webpack.dev.js",
          "webpack.prod.js",
          "src/js/**/*.js"
        ]
      }
    ],
    "no-plusplus": "off",
    "arrow-spacing": "off",
    "object-curly-spacing": "off",
    "prefer-const": "warn",
    "no-unused-vars": "warn",
    "object-shorthand": "warn",
    "no-param-reassign": "warn",
    "linebreak-style": [
      "error",
      "unix"
    ]
  }
}
